<p style="color: green"><%= notice %></p>

<h1>Properties</h1>
<div class='d-flex justify-content-end'>
  <%= link_to "Add A New House", new_property_path, class: 'h4 mt-3' %>
  <span class='h1 me-5 mb-3'><i class="bi bi-house-door"></i></span>
</div>

<div id="properties">
  <% @properties.each do |property| %>
    <%= render property %>
    <p>
      <%= link_to "More...", property, class: 'btn btn-success' %>
    </p>
  <% end %>
</div>


<%= form_with(model: property) do |form| %>
  <% if property.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class= 'form-group'>
    <%= form.label 'Title', style: "display: block" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class= 'form-group'>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address, class: 'form-control' %>
  </div>

  <div class= 'form-group'>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price, class: 'form-control' %>
  </div>

  <div class= 'form-group'>
    <%= form.label :roomsinteger, style: "display: block" %>
    <%= form.text_field :roomsinteger, class: 'form-control' %>
  </div>

  <div class= 'form-group'>
    <%= form.label :photo, style: "display: block" %>
    <%= form.text_field :photo, class: 'form-control' %>
  </div>

  <div class= 'form-group'>
    <% form.label :account_id, style: "display: block" %>
    <% form.text_field :account_id %>
  </div>

  <div class= 'form-group'>
    <%= form.submit  class: ' btn btn-lg btn-block btn-success mt-2' %>
  </div>
<% end %>
